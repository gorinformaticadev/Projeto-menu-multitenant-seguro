-- Migração para criar tabela de exemplo do módulo
-- Data: 2025-12-14
-- Versão: 1.0.0

CREATE TABLE IF NOT EXISTS module_exemplo_data (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    description TEXT,
    value DECIMAL(10,2) DEFAULT 0.00,
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    tenant_id VARCHAR(36),
    INDEX idx_tenant_id (tenant_id),
    INDEX idx_name (name)
);

-- Comentários sobre a tabela
ALTER TABLE module_exemplo_data COMMENT = 'Tabela de dados do módulo exemplo completo';