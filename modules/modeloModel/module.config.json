{
    "name": "modeloModel",
    "displayName": "Modelo Integrado",
    "description": "Módulo de exemplo com integração total (Slots, Menu, Widgets)",
    "version": "1.0.0",
    "author": "Equipe de Desenvolvimento",
    "dependencies": {
        "coreVersion": "^1.0.0",
        "otherModules": []
    },
    "permissions": [
        {
            "name": "modelo.view",
            "description": "Permite visualizar o módulo modelo"
        }
    ],
    "routes": [
        {
            "path": "/modelo",
            "permission": "modelo.view"
        }
    ],
    "menu": {
        "position": 100,
        "icon": "Box",
        "label": "Modelo",
        "name": "Modelo",
        "children": [
            {
                "label": "Geral",
                "name": "Geral",
                "path": "/modelo",
                "icon": "Box"
            },
            {
                "label": "Configurações",
                "name": "Configurações",
                "path": "/modelo/config",
                "icon": "Settings"
            }
        ]
    },
    "userMenu": [
        {
            "label": "Modelo",
            "path": "/modelo",
            "icon": "Box"
        }
    ],
    "notifications": {
        "events": [
            {
                "name": "modelo.viewed",
                "title": "Modelo Visualizado",
                "message": "Um usuário visualizou o módulo modelo."
            }
        ]
    },
    "dashboardWidgets": [
        {
            "title": "Widget do Modelo",
            "description": "Este é um widget de exemplo do novo módulo.",
            "type": "info-card",
            "icon": "Box",
            "actionUrl": "/modelo",
            "actionLabel": "Ver Modelo"
        }
    ],
    "slots": [
        {
            "position": "dashboard_top",
            "content": "Bem-vindo ao Dashboard! (Injetado pelo ModeloModel)",
            "type": "alert-info"
        },
        {
            "position": "users_page_top",
            "content": "Gestão de Usuários (Injetado pelo ModeloModel)",
            "type": "text-highlight"
        }
    ]
}