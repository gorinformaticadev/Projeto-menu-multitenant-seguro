{
  "name": "demo-completo",
  "slug": "demo-completo",
  "displayName": "Demonstração Completa",
  "version": "1.0.0",
  "description": "Módulo completo de demonstração de todas as funcionalidades do sistema modular CORE IDEAL",
  "author": "Equipe CORE",
  "category": "demos",
  "enabled": true,
  "dependencies": {
    "coreVersion": "1.0.0"
  },
  "config": {
    "defaultSettings": {
      "showNotifications": true,
      "enableWidgets": true,
      "maxItems": 50,
      "enablePublicPages": true
    },
    "permissions": [
      "demo.view",
      "demo.create",
      "demo.edit",
      "demo.delete",
      "demo.admin"
    ],
    "routes": [
      {
        "path": "/demo",
        "component": "DemoListPage",
        "title": "Demonstrações",
        "protected": true,
        "permissions": ["demo.view"]
      },
      {
        "path": "/demo/dashboard",
        "component": "DemoDashboardPage",
        "title": "Dashboard Demo",
        "protected": true,
        "permissions": ["demo.view"]
      },
      {
        "path": "/demo/create",
        "component": "DemoCreatePage",
        "title": "Nova Demonstração",
        "protected": true,
        "permissions": ["demo.create"]
      },
      {
        "path": "/demo/edit/:id",
        "component": "DemoEditPage",
        "title": "Editar Demonstração",
        "protected": true,
        "permissions": ["demo.edit"]
      },
      {
        "path": "/demo/admin",
        "component": "DemoAdminPage",
        "title": "Administração Demo",
        "protected": true,
        "roles": ["SUPER_ADMIN"],
        "permissions": ["demo.admin"]
      },
      {
        "path": "/public/demo/catalog",
        "component": "DemoPublicCatalogPage",
        "title": "Catálogo Público",
        "protected": false
      }
    ],
    "menuItems": [
      {
        "id": "demo-main",
        "label": "Demonstrações",
        "icon": "rocket",
        "path": "/demo",
        "order": 20,
        "permissions": ["demo.view"],
        "badge": "NOVO"
      },
      {
        "id": "demo-dashboard",
        "label": "Dashboard Demo",
        "icon": "chart-bar",
        "path": "/demo/dashboard",
        "order": 21,
        "permissions": ["demo.view"]
      },
      {
        "id": "demo-create",
        "label": "Nova Demo",
        "icon": "plus-circle",
        "path": "/demo/create",
        "order": 22,
        "permissions": ["demo.create"]
      },
      {
        "id": "demo-admin",
        "label": "Admin Demo",
        "icon": "cog",
        "path": "/demo/admin",
        "order": 23,
        "roles": ["SUPER_ADMIN"],
        "permissions": ["demo.admin"],
        "badge": "Admin"
      }
    ],
    "database": {
      "tables": ["demos", "demo_categories", "demo_tags"],
      "migrations": true
    }
  }
}
