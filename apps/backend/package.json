    "@prisma/client": "^6.4.1",
    "@sentry/node": "^8.0.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/adm-zip": "^0.5.7",
    "@types/qrcode": "^1.5.6",
    "@types/sanitize-html": "^2.16.0",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
