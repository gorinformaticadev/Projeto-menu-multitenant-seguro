# ============================================
# CONFIGURAÇÕES DE PRODUÇÃO - SEGURAS
# ============================================

# IMPORTANTE: NUNCA use valores de exemplo em produção!
# Gere chaves criptograficamente seguras para cada ambiente

# ============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ============================================
# Use um banco dedicado para produção com credenciais únicas
DATABASE_URL="" #"postgresql://prod_user:CHANGE_THIS_STRONG_PASSWORD@prod-db-host:5432/multitenant_prod_db?schema=public"

# ============================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO JWT - CRÍTICO
# ============================================
# GERE UMA CHAVE SEGURA: openssl rand -base64 64
JWT_SECRET="CHANGE_THIS_TO_A_CRYPTOGRAPHICALLY_SECURE_64_CHAR_KEY_GENERATED_WITH_OPENSSL"
JWT_EXPIRES_IN="7d"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ============================================
# CHAVE DE CRIPTOGRAFIA PARA DADOS SENSÍVEIS
# ============================================
# GERE UMA CHAVE SEGURA: openssl rand -base64 32
ENCRYPTION_KEY="CHANGE_THIS_TO_A_32_CHAR_ENCRYPTION_KEY"

# ============================================
# CONFIGURAÇÕES DO SERVIDOR
# ============================================
FRONTEND_URL="https://your-domain.com"
PORT=4000
NODE_ENV="production"
HOST="0.0.0.0"

# ============================================
# WEB PUSH (PWA/Windows em background)
# ============================================
# Gere com: npx web-push generate-vapid-keys
WEB_PUSH_PUBLIC_KEY="CHANGE_THIS_TO_VAPID_PUBLIC_KEY"
WEB_PUSH_PRIVATE_KEY="CHANGE_THIS_TO_VAPID_PRIVATE_KEY"
WEB_PUSH_SUBJECT="mailto:suporte@your-domain.com"

# ============================================
# CONFIGURAÇÕES DE PRODUÇÃO - HTTPS OBRIGATÓRIO
# ============================================
HTTPS_ENABLED="true"
SSL_KEY_PATH="/path/to/ssl/private.key"
SSL_CERT_PATH="/path/to/ssl/certificate.crt"

# Rate Limiting Produção (mais restritivo)
GLOBAL_RATE_LIMIT_TTL=60000
GLOBAL_RATE_LIMIT_LIMIT=50

# ============================================
# MONITORAMENTO E LOGS
# ============================================
# Configure Sentry para monitoramento de erros
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"

# Log Level para produção (apenas erros e warnings)
LOG_LEVEL="warn"

# ============================================
# UPLOADS E ARQUIVOS ESTÁTICOS
# ============================================
UPLOAD_DESTINATION="./uploads"
MAX_FILE_SIZE="5242880"  # 5MB em bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# ============================================
# CONFIGURAÇÕES DE SEGURANÇA AVANÇADAS
# ============================================
# CSP Avançado (Content Security Policy)
CSP_ADVANCED="true"

# Headers de Segurança Adicionais
SECURITY_HEADERS_ENABLED="true"

# CSRF Protection (Cross-Site Request Forgery)
CSRF_PROTECTION_ENABLED="true"

# CORS - Configurações restritivas para produção
CORS_MAX_AGE=86400  # 24 horas

# ============================================
# CONFIGURAÇÕES DE EMAIL (SMTP SEGURO)
# ============================================
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT="587"
SMTP_SECURE="true"
SMTP_USER="your-secure-email@your-domain.com"
SMTP_PASS="your-app-specific-password"
EMAIL_FROM="noreply@your-domain.com"
EMAIL_FROM_NAME="Your System Name"

# ============================================
# SENHAS PADRÃO DO SISTEMA (GERADAS AUTOMATICAMENTE)
# ============================================
# NUNCA use senhas simples em produção!
# Estas serão geradas automaticamente na primeira execução
ADMIN_DEFAULT_PASSWORD=""  # Será gerado automaticamente
SYSTEM_MASTER_KEY=""       # Será gerado automaticamente

# ============================================
# CONFIGURAÇÕES DE CACHE (Redis - RECOMENDADO)
# ============================================
REDIS_URL="redis://redis-host:6379"
CACHE_TTL=3600  # 1 hora

# ============================================
# BACKUP E SEGURANÇA
# ============================================
# Configurações para backup automático
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Todo dia às 2h da manhã
BACKUP_RETENTION_DAYS=30

# Configurações de auditoria
AUDIT_LOG_RETENTION_DAYS=365
SECURITY_SCAN_ENABLED="true"
