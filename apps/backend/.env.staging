# ============================================
# CONFIGURAÇÕES DE STAGING
# ============================================

# Ambiente
NODE_ENV=staging
HOST=0.0.0.0

# Banco de dados (staging)
DATABASE_URL="postgresql://postgres:postgres123@localhost:5433/multitenant_staging?schema=public"

# JWT
JWT_SECRET="staging-jwt-secret-key-change-in-production-64-chars-minimum"
JWT_EXPIRES_IN="7d"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Servidor
PORT=4001
FRONTEND_URL="http://localhost:5001"

# Web Push (staging)
WEB_PUSH_PUBLIC_KEY=""
WEB_PUSH_PRIVATE_KEY=""
WEB_PUSH_SUBJECT="mailto:staging@example.com"

# Sentry (staging)
SENTRY_DSN="https://your-staging-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="staging"

# Logs
LOG_LEVEL="debug"

# Upload
UPLOAD_DESTINATION="./uploads/staging"
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting (mais permissivo em staging)
GLOBAL_RATE_LIMIT_TTL=30000
GLOBAL_RATE_LIMIT_LIMIT=50

# CORS
CORS_MAX_AGE=86400

# Configurações de desenvolvimento para testes
HTTPS_ENABLED="false"
CSP_ADVANCED="false"
SECURITY_HEADERS_ENABLED="true"
