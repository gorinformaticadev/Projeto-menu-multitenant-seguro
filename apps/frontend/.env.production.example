# ============================================
# CONFIGURAÇÕES DE PRODUÇÃO - FRONTEND
# ============================================

# URL da API Backend
NEXT_PUBLIC_API_URL="https://api.seudominio.com"

# Ambiente
NODE_ENV="production"

# Configurações de Build
NEXT_TELEMETRY_DISABLED=1

# ============================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ============================================
# Sentry
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# ============================================
# CONFIGURAÇÕES DE SEGURANÇA
# ============================================
# Chave para criptografia de dados locais (mude em produção!)
NEXT_PUBLIC_ENCRYPTION_KEY="chave-producao-unica-2024"

# ============================================
# CONFIGURAÇÕES DE PERFORMANCE
# ============================================
# Analytics (Google Analytics, etc.)
# NEXT_PUBLIC_GA_ID=""

# CDN para assets (opcional)
# NEXT_PUBLIC_CDN_URL="https://cdn.seudominio.com"

# ============================================
# CONFIGURAÇÕES DE FUNCIONALIDADES
# ============================================
# Habilitar/desabilitar funcionalidades
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="false"
NEXT_PUBLIC_ENABLE_DEVTOOLS="false"