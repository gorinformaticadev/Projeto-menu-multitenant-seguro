# Production Environment Variables
# Copy this file to .env.prod and fill with actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/multitenant?schema=public
DB_USER=postgres
DB_PASSWORD=your_secure_db_password

# JWT
JWT_SECRET=your_64_character_jwt_secret_key_here_minimum_32_chars
JWT_ACCESS_EXPIRES_IN=15m

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Docker Hub (for docker-compose)
DOCKERHUB_USERNAME=your_dockerhub_username

# Redis (optional, for WebSocket scaling)
REDIS_HOST=redis
REDIS_PORT=6379

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001