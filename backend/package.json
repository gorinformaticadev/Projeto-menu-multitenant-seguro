{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend NestJS com segurança e isolamento multitenant - GOR Informática",
  "author": "GOR Informática <contato@gorinformatica.com.br>",
  "license": "AGPL-3.0",
  "homepage": "https://www.gorinformatica.com.br",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "start:prod": "node dist/backend/src/main",
    "build": "nest build",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run lint && npm run security:audit && npm run security:validate",
    "security:validate": "ts-node scripts/simple-security-check.ts",
    "security:full-scan": "ts-node scripts/security-check.ts",
    "security:snyk": "powershell -ExecutionPolicy Bypass -File ./scripts/snyk-test.ps1",
    "pre-deploy": "npm run security:check && npm run build"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/platform-socket.io": "^10.4.20",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^10.4.20",
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "@types/adm-zip": "^0.5.7",
    "@types/qrcode": "^1.5.6",
    "@types/sanitize-html": "^2.16.0",
    "adm-zip": "^0.5.16",
    "bcrypt": "^5.1.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "openssl": "^2.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.17.0",
    "semver": "^7.5.4",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.12",
    "@prisma/client": "^6.19.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/semver": "^7.5.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.50.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "prisma": "^6.19.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
